
@{
    ViewData["Title"] = "FileDetails";
}

<h1>File Details</h1>
<h2>Data pass with viewbag</h2>
<div class="row">
    <div class="col-md-12">
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Extension</th>
                    <th>Path</th>
                    @*<th>Size</th>*@
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.data) { 
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Extension</td>
                        @*<td>@item.Size</td>*@
                        <td>@item.Path</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

