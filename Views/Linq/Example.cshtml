
@{
    ViewData["Title"] = "Example";
    Layout = "_Linq";
}

<h1>Linq Example</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-controller="LINQ" asp-action="Example" method="post" class="form-inline">
            <hr />
            <label>Search</label>
            <input type="text" name="searchnum" placeholder="Search your number" value="" class="form-control" />  &nbsp;          
            <button type="submit" name="submit" class="btn btn-success form-control">search</button>
            <hr />
        </form>
    </div>
</div>
<br />
@if (ViewBag.srh != null)
{
    foreach (var item in ViewBag.srh)
    {
        <h3 class="alert alert-primary">@item</h3>
    }
}

